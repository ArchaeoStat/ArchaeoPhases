  bibtype      = "Article",
  author       = "Anne Philippe and Marie-Anne Vibet",
  title        = "{{Analysis of Archaeological Phases Using the R Package ArchaeoPhases}}",
  year         = "2020",
  journal      = "Journal of Statistical Software, Code Snippets",
  volume       = "93",
  number       = "1",
  page         = "1--25",
  doi          = "10.18637/jss.v093.c01"
)
bibentry(
  bibtype      = "Manual",
